{
  "name": "typescript-eslint-prettier-starter",
  "description": "",
  "version": "1.0.0",
  "type": "commonjs",
  "files": [
    "dist/**/*"
  ],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "test": "jest --coverage src",
    "test:watch": "jest --watch src",
    "lint": "run-p lint:json lint:ts lint:eslint",
    "lint:json": "prettier --list-different *.json",
    "lint:eslint": "eslint --ext .ts ./src",
    "lint:ts": "tsc --noemit",
    "build": "tsc",
    "dev": "tsx --require tsconfig-paths/register src/index.ts",
    "format": "prettier --write \"**/*.{ts,tsx,js,json}\"",
    "clean": "rm -rf dist build coverage"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^22.15.30",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "eslint-plugin-prettier": "^5.4.1",
    "eslint-plugin-unused-imports": "^4.1.4",
    "jest": "^29.7.0",
    "prettier": "^3.5.3",
    "ts-jest": "^29.3.4",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "npm-run-all": "^4.1.5"
  }
}
